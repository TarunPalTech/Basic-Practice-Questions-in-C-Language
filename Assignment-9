1. Write a program to calculate sum of first N natural numbers.
#include<stdio.h>
int main(){
    int r,n,sum=0,i;
    printf("How many numbers do you want to enter:");
    scanf("%d",&r);
    for(i=1;i<=r;i++)
    {
        printf("Enter a number:");
        scanf("%d",&n);
        sum=sum+n;
    }
    printf("Sum is %d.",sum);
    return 0;
}

2. Write a program to calculate sum of first N even natural numbers.
#include<stdio.h>
int main(){
    int r,i,sum=0;
    printf("Enter a specific range:");
    scanf("%d",&r);
    for(i=2;i<=r*2;i=i+2)
    {
        sum=sum+i;
    }
    printf("Sum is %d.",sum);
    return 0;
}
3. Write a program to calculate sum of first N odd natural numbers.
#include<stdio.h>
int main(){
    int r,i,sum=0;
    printf("Enter a specific range:");
    scanf("%d",&r);
    for(i=1;i<=r*2;i=i+2)
    {
        sum=sum+i;
    }
    printf("Sum is %d.",sum);
    return 0;
}

4. Write a program to calculate sum of squares of first N natural numbers.
#include<stdio.h>
int main(){
    int r,i,sum=0;
    printf("Enter a specific range:");
    scanf("%d",&r);
    for(i=1;i<=r;i++)
    {
        sum=sum+i*i;
    }
    printf("Sum is %d.",sum);
    return 0;
}
5. Write a program to calculate sum of cubes of first N natural numbers.
#include<stdio.h>
int main(){
    int r,i,sum=0;
    printf("Enter a specific range:");
    scanf("%d",&r);
    for(i=1;i<=r;i++)
    {
        sum=sum+i*i*i;
    }
    printf("Sum is %d.",sum);
    return 0;
}
6. Write a program to calculate factorial of a number.
#include<stdio.h>
int main(){
    int fact=1,i,num;
    printf("Enter a number:");
    scanf("%d",&num);
    if(num<0)
        printf("Error!, Factorial of the negative number is not possible.");
    else if(num==1 || num==0)
        printf("Factorial is 1.");
    else
    {
        for(i=1;i<=num;i++)
            fact=fact*i;
        printf("Factorial is %d.",fact);
    }
    return 0;
}


7. Write a program to count digits in a given number.
#include<stdio.h>
int main(){
    int num,count=0;
    printf("Enter a number:");
    scanf("%d",&num);
    while(num)
    {
        num=num/10;
        count++;
    }
    printf("Count is %d.",count);
    return 0;
}

8. Write a program to check whether a given number is a Prime number or not.
#include<stdio.h>
int main(){
    int n,flag=0;
    printf("Enter a number:");
    scanf("%d",&n);
    if(n==0 || n==1)
        flag=1;
    for(int i=2;i<=n/2;i++){
        if(n%i==0){
            flag=1;
            break;
        }
    }
    if(flag==0)
        printf("Number is a prime number.");
    else{
        printf("Numner is not a prime number.");
    }
    return 0;
}



9. Write a program to calculate LCM of two numbers.
#include<stdio.h>
int main(){
    int num1,num2,max;
    printf("Enter first number:");
    scanf("%d",&num1);
    printf("Enter second number:");
    scanf("%d",&num2);
    if(num1>num2)
        max=num1;
    else
        max=num2;
    while(1)
    {
        if(max%num1==0 && max%num2==0)
        {
            printf("LCM of %d and %d is %d.",num1,num2,max);
            break;
        }
        max++;
    }
    return 0;
}

#include<stdio.h>
int main(){
    int a,b,L;
    printf("Enter first number:");
    scanf("%d",&a);
    printf("Enter second number:");
    scanf("%d",&b);
    for(L=a>b?a:b;L<=a*b;L++){
        if(L%a==0 && L%b==0){
            printf("LCM of %d and %d is %d.",a,b,L);
            break;
        }
    }
    return 0;
}


#include<stdio.h>
int main(){
    int a,b,L=1,flag=0,i=2;
    printf("Enter first number:");
    scanf("%d",&a);
    printf("Enter second number:");
    scanf("%d",&b);
    while(a>1 || b>1){
        if(a%i==0){
            a=a/i;
            flag=1;
        }
        if(b%i==0){
            b=b/i;
            flag=1;
        }
        if(flag==1){
            L*=i;
            flag=0;
        }else{
            i++;
        }
    }
    printf("LCM is %d.",L);
    return 0;
}

10. Write a program to reverse a given number.
#include<stdio.h>
int main(){
    int num,rev_num=0;
    printf("Enter a number:");
    scanf("%d",&num);
    while(num)
    {
        rev_num*=10;
        rev_num+=num%10;
        num/=10;
        
    }
    printf("Now number is %d.",rev_num);
    return 0;
}
