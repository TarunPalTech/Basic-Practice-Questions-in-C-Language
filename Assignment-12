    12321
   1234321
#include<stdio.h>
void f1();
//void f2();
int main()
{
    f1();
    return 0;
}
void f1(){
    int i,j,k;
    for(i=1;i<=4;i++){
        k=1;
        for(j=1;j<=7;j++){
            if(j>=5-i && j<=3+i){
                printf("%d",k);
                j<4?k++:k--;
            }
            else{
                printf(" ");
            }
        }
        printf("\n");
    }
}
