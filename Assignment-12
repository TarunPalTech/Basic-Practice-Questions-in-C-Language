#include<stdio.h>
void f1();
//void f2();
int main()
{
    f1();
    return 0;
}
void f1(){
    int i,j;
    char k;
    for(i=1;i<=4;i++){
        k=65;
        for(j=1;j<=7;j++){
            if(j<=5-i || j>=3+i){
                printf("%c",k);
                j<4?k++:k--;
            }
            else{
                printf(" ");
                if(j==4)
                    k--;
            }
        }
        printf("\n");
    }
}

