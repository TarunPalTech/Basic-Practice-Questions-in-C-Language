7.
       1
      1 1
     1 2 1
    1 2 2 1
   1 2 3 2 1
#include<stdio.h>
void f1();
//void f2();
int main()
{
    f1();
    return 0;
}
void f1(){
    int i,j,k,flag;
    for(i=1;i<=5;i++){
        k=1;
        flag=1;
        for(j=1;j<=9;j++){
            if(j>=6-i && j<=4+i){
                if(k){
                    printf("%d",flag);
                    j<5?flag++:flag--;
                }
                else{
                    printf(" ");
                    if(j==5)
                        flag--;
                }
                k=1-k;
            }
            else{
                printf(" ");
            }
        }
        printf("\n");
    }
}
