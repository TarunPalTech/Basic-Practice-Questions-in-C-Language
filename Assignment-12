#include<stdio.h>
void f1();
//void f2();
int main()
{
    f1();
    return 0;
}
void f1(){
    int i,j;
    for(i=1;i<=4;i++){
        for(j=1;j<=7;j++){
            if(j>=5-i && j<=3+i){
                printf("*");
            }
            else{
                printf(" ");
            }
        }
        printf("\n");
    }
}
